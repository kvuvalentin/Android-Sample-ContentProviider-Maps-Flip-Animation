<set xmlns:android="http://schemas.android.com/apk/res/android" android:interpolator="@android:anim/anticipate_interpolator">
    <scale
        android:startOffset="300"
        android:duration="700"
        android:fromXScale="1.0"
        android:fromYScale="1.0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="0.01"
        android:toYScale="1.0"
        android:fillAfter="false"/>
    <scale
        android:startOffset="300"
        android:duration="700"
        android:fromXScale="0.01"
        android:fromYScale="1.0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1.0"
        android:toYScale="1.0"
        android:fillAfter="false"/>
</set>